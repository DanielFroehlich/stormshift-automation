apiVersion: v1
baseDomain: {{ stormshift_base_domain }}
compute:
  - architecture: amd64
    hyperthreading: Enabled
    name: worker
    platform: {}
    replicas: {{ groups['cluster_' + stormshift_cluster_name + '_workers'] | length | default(0) }}
controlPlane:
  architecture: amd64
  hyperthreading: Enabled
  name: master
  platform: {}
  replicas: {{ groups['cluster_' + stormshift_cluster_name + '_cp'] | length }}
metadata:
  creationTimestamp: null
  name: {{ stormshift_cluster_name }}
networking:
  clusterNetwork:
    - cidr: 10.128.0.0/14
      hostPrefix: 23
  machineNetwork:
    - cidr: {{ network }}/{{ network_ip_address_prefix_length }}
  networkType: OVNKubernetes
  serviceNetwork:
    - 172.30.0.0/16
platform:
  none: {}
publish: External
pullSecret:
  '{{ image_pull_secret }}'
sshKey: |
  {{ lookup('ansible.builtin.env', 'SSH_PUBLIC_KEY' ) }}
